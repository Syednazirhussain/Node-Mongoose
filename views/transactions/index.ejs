<%- include('./../layout/head') %>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashboard</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Home</a></li>
                    <li class="breadcrumb-item active">Transactions</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <%- include('./../layout/alert-messages') %>
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between">
                            <h3 class="card-title">Transactions</h3>
                        </div>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Customer</th>
                                    <th>Currency</th>
                                    <th>Amount</th>
                                    <th>Payment Type</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% transactions.forEach((transaction, index) => { %>
                                    <tr>
                                    <td><%= (index + 1) %></td>
                                    <td><%= transaction.customer %></td>
                                    <td><%= transaction.currency %></td>
                                    <td><%= transaction.amount / 100 %></td>
                                    <td><%= transaction.payment_method_types %></td>
                                    <td><%= transaction.status %></td>
                                    <td><a href="<%= transaction.charges.data[0].receipt_url %>" class="btn btn-block btn-primary" target="_blank">
                                            Receipt
                                        </a>
                                    </td>
                                    <td>
                                        <% if(transaction.charges.data['0'].refunded == false) { %>
                                            <a href="javascript:void(0);" onclick="confirm('<%= transaction.id %>')" class="btn btn-block btn-primary">
                                                Refund
                                            </a>
                                        <% } else { %>
                                            <a href="javascript:void(0);" class="btn btn-block btn-secondary">
                                                Refunded
                                            </a>
                                        <% } %>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<%- include('./../layout/footer') %>
<script>
    function confirm (transaction_id) {

    Swal.fire({
        title: 'Are you sure?',
        text: 'Do you want to refund this payment:'+transaction_id,
        icon: 'question',
        showDenyButton: true,
        confirmButtonText: 'Yes',
        denyButtonText: 'No'
    }).then((result) => {
        /* Read more about isConfirmed, isDenied below */
        if (result.isConfirmed) {
            console.log("Confirmed")
            let url = '/refund/'+ transaction_id
            window.location.href = url
        } else if (result.isDenied) {
            console.log("Denied")
        }
    })
}
</script>