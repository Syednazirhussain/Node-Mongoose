<%- include('./../layout/head') %>

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Edit Profile</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Dashboard</a></li>
                    <li class="breadcrumb-item active">Edit Profile</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <%- include('./../layout/alert-messages') %>
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Edit</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form action="updateProfile" method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Name</label>
                                        <input type="text" class="form-control" name="name" value="<%= user.name %>" placeholder="Enter Name">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="email" class="form-control" name="email" minlength="5" maxlength="50" value="<%= user.email %>" placeholder="Enter Email" readonly>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="exampleInputFile">Image</label>
                                        <div class="input-group">
                                            <div class="custom-file">
                                            <input type="file" name="image" class="custom-file-input" id="customFile" accept="image/*">
                                            <label class="custom-file-label" for="customFile">Choose file</label>
                                            </div>
                                        </div>
                                    </div>
                                    <a href="<%= user.image %>" data-toggle="lightbox" target="_blank" data-title="<%= user.image %>">
                                    <img src="<%= user.image %>" class="img-fluid mb-2" style="width: 100px;height: 100px;" alt="black sample">
                                    </a>
                                    </div> 
                            </div>
                            <div class="card-footer">
                                <input type="submit" class="btn btn-primary" id="save" value="Submit"></input>
                                <input type="button" class="btn btn-default" id="cancel" value="Cancel"></input>
                            </div>
                            </div>
                            
                        </form>
                    </div>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
    </div>
</section>

<!-- /.content -->
<%- include('./../layout/footer') %>

<script>
    $('#cancel').click(function () {
        window.location.href = "/";
    });
</script>