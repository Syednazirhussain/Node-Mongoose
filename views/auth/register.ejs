<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Node-Mongoose</title>
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <link rel="stylesheet" href="<%= url('admin-lte/dist/css/adminlte.min.css') %>">
</head>

<body class="hold-transition login-page">
  <div class="login-box">
    <div class="card card-outline card-primary">
      <div class="card-header text-center">
      <a href="javascript:void(0);" class="h1"><b>Node</b>-Mongoose</a>
      </div>
      <%- include('./../layout/alert-messages') %>
      <div class="card-body">
        <p class="login-box-msg">Create a new account</p>
        <form action="/register" method="POST" id="registerform">
          <div class="input-group mb-3">
            <input name="name" type="text" class="form-control" placeholder="Name"
              value="<% if (typeof fields !== 'undefined') { if(fields != '') { %><%= fields.name %><% } } %>">
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-envelope"></span>
              </div>
            </div>
          </div>
          <div class="input-group mb-3">
            <input name="email" type="email" class="form-control" placeholder="Email"
              value="<% if (typeof fields !== 'undefined') { if (fields != '') { %><%= fields.email %><% } } %>">
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-envelope"></span>
              </div>
            </div>
          </div>
          <div class="input-group mb-3">
            <input name="password" type="password" class="form-control" placeholder="Password"
              value="<% if (typeof fields !== 'undefined') { if (fields != '') { %><%= fields.password %><% } } %>">
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-lock"></span>
              </div>
            </div>
          </div>
          <div class="input-group mb-3">
            <input name="confirmpassword" type="password" class="form-control" placeholder="Confirm Password"
              value="<% if (typeof fields !== 'undefined') { if (fields != '') { %><%= fields.confirmpassword %><% } } %>">
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-lock"></span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <button type="submit" id="btnSubmit" class="btn btn-primary btn-block">Sign Up</button>
            </div>
          </div>
        </form>
        <p class="mb-1"><br>
          <a href="/login">Already have an account?</a>
        </p>
      </div>
    </div>
  </div>
  <script src="<%= url('jquery/dist/jquery.min.js') %>"></script>
  <script src="<%= url('admin-lte/dist/js/adminlte.min.js') %>"></script>
  <script>
    $(document).ready(function () {
      $('#registerform').submit(function (e) {
        $('#btnSubmit').attr('disabled', true);
      })
    })
  </script>
</body>
</html>